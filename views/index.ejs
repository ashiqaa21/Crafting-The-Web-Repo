<%- include('header', {title: 'Home' }) %>
    <div class="container">
        <h1 class="text-center mb-4">Latest Articles</h1>
        <div class="row">
            <% articles.forEach(function(article) { %>
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title">
                                <%= article.title %>
                            </h2>
                            <p class="card-text">
                                <%= article.content.substring(0, 150) %>...
                            </p>
                            <a href="/article/<%= article._id %>" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <%- include('footer') %>